{% extends 'general.html.twig' %}

{% block title %}MMI Stage à l'étranger/Profil {{ session.nom }}{{ session.prenom }}{% endblock %}
{% block contenu %}
    <article id="monProfil">

        <div class="col6">
            <div>
                <h3 class="blanc">MMI Montbéliard</h3>
                <h2 class="blanc">Mon profil</h2>
            </div>
        </div>

        <div class="col1">
            <div>
                <span>Nom :</span>
                <span>{{ session.nom }}</span>
            </div>
            <div>
                <span>Prénom :</span>
                <span>{{ session.prenom }}</span>
            </div>
            <div>
                <span>Email :</span>
                <span>{{ session.mail }}</span>
            </div>
            <div>
                {% if suivit.bean.nom == "" %}
                    <a class="bouton2" href="index.php?page=newStage">J'ai trouvé mon stage</a>
                {% endif %}

                {% if suivit.bean.nom != "" %}
                    <span>Mon stage :</span>
                    <span>{{ suivit.bean.nom }}</span>
                {% endif %}
            </div>
        </div>

        <div class="col1 colonneaImage" id="imageProfil">
            <img src="imagesappli/{{ session.photo }}" alt="">
        </div>

        <a href="index.php?page=modifProfil" id="modifinfos">Modifier ces informations</a>

    </article>
{% endblock %}
