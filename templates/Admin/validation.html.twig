{% extends 'general.html.twig' %}

{% block title %}MMI Stage à l'étranger/{{ nom.entreprise }}{% endblock %}

{% block contenu %}
   <article id="tableValidation">
       <div class="titreAdmin">
           <a href="index.php?page=pageAdmin"><img class="retourAccueil" src="CSS/images/retourAdmin.png" alt=""></a>
           <h2>Liste des validations</h2>
       </div>
       {% for validation in listeValidation %}
       <form action="index.php?page=listeValidation&id={{ validation.id }}" method="post" enctype="multipart/form-data">
           <p>{{ validation.nom }} {{ validation.prenom }}</p>
           <button type="submit" name="accepter"><img src="CSS/images/btn_accepter.jpg" alt="accepter"></button>
           <button type="submit" name="refuser" value="refuser" ><img src="CSS/images/btn_refuser.jpg" alt="refuser"></button>
       </form>
       {% endfor %}
   </article>
{% endblock %}
