{% extends 'general.html.twig' %}

{% block title %}MMI Stage à l'étranger/Profil {{ session.nom }}{{ session.prenom }}{% endblock %}
{% block boostrap %}
    <link rel="stylesheet" href="CSS/bootstrap-3.2.0-dist/css/bootstrap.min.css">
{% endblock %}
{% block contenu %}
    <article class="formulaireAdmin">
        <div class="container">
            <form method="post" action="index.php?page=modifEnt&id={{ entreprise.bean.id }}"
                  enctype="multipart/form-data">
                <div><a href="index.php?page=listeEntreprise"><img class="retourAccueil"
                                                                   src="CSS/images/retourAdmin.png"
                                                                   alt="">Retour à la liste des entreprise</a></div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>modification entreprise : </strong>
                    </div>
                    <div class="panel-body">
                        <table>
                            <tbody>
                            <tr>
                                <td>
                                    <div class="input-group">
                <span class="input-group-addon">
                    <label for="nom">Nom</label>
                </span>
                                        <input type="text" class="form-control" name="nom"
                                               value="{{ entreprise.bean.nom }}"
                                               placeholder="Nom" required>
                                    </div>
                                    <br/>
                                    <div class="input-group">
                                   <span class="input-group-addon">
                                         <label for="visiter">visiter</label>
                                   </span>
                                        <input type="radio" class="radio-inline" name="visiter"
                                               value="0" placeholder="visite"
                                               {% if entreprise.bean.visiter==0 %}checked{% endif %} required>
                                        <input type="radio" class="radio-inline" name="visiter"
                                               value="1" placeholder="visite"
                                               {% if entreprise.bean.visiter==1 %}checked{% endif %} required>
                                    </div>
                                    <br/>
                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="description">description</label>
                                   </span>
                                        <input type="text" class="form-control" name="description"
                                               value="{{ entreprise.bean.description }}"
                                               placeholder="Description">
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="rue">rue</label>
                                   </span>
                                        <input type="text" class="form-control" name="rue"
                                               value="{{ entreprise.bean.rue }}"
                                               placeholder="rue">
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="Avis">avis</label>
                                   </span>
                                        <input type="radio" class="radio-inline" name="avis"
                                               value="0" placeholder="visite"
                                               {% if entreprise.bean.avis==0 %}checked{% endif %} required>
                                        <input type="radio" class="radio-inline" name="avis"
                                               value="1" placeholder="visite"
                                               {% if entreprise.bean.avis==1 %}checked{% endif %} required>
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="taille">taille</label>
                                   </span>
                                        <input type="radio" class="radio-inline" name="taille"
                                               value="0" placeholder="visite"
                                               {% if entreprise.bean.taille==0 %}checked{% endif %} required>
                                        <input type="radio" class="radio-inline" name="taille"
                                               value="1" placeholder="visite"
                                               {% if entreprise.bean.taille==1 %}checked{% endif %} required>
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="profil">profil</label>
                                   </span>
                                        <input type="text" class="form-control" name="profil"
                                               value="{{ entreprise.bean.profil }}"
                                               placeholder="profil">
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="ville">ville</label>
                                   </span>
                                        <input type="text" class="form-control" name="ville"
                                               value="{{ entreprise.bean.ville }}"
                                               placeholder="Ville">
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="contact">contact</label>
                                   </span>
                                        <input type="text" class="form-control" name="contact"
                                               value="{{ entreprise.bean.contact }}"
                                               placeholder="Contact">
                                    </div>
                                    <br/>

                                    <div class="input-group">
                                   <span class="input-group-addon">
                                        <label for="telephone">téléphone</label>
                                   </span>
                                        <input type="number" class="form-control" name="telephone"
                                               value="{{ entreprise.bean.telephone }}"
                                               placeholder="Telephone">
                                    </div>
                                    <br/>

                                    <select class="form-control" name="pays">
                                        <option value="{{ entreprise.bean.LePays.id }}">{{ entreprise.bean.LePays.nom }}</option>
                                        {% for pays in liste %}
                                            <option value="{{ pays.id }}">{{ pays.nom }}</option>

                                        {% endfor %}
                                    </select>
                                    <br/>
                                    <div class="panel-footer">
                                        <button type="submit" class="btn btn-default" name="valider">
                                            modifier
                                        </button>
                                    </div>
                                    <br/>
                                    <div class="panel panel-default col-md-9 col-sm-9 col-xs-12">
                                        <div class="panel-heading">
                                            <strong>Attribution des types : {{ entreprise.bean.nom }}</strong>
                                        </div>
                                        <div class="panel-body">
                                            <form method="post" action="#">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <strong>Nouveau types </strong>
                                                    </div>
                                                    <div class="panel-body">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">Types : </span>
                                                            <select name="type" class="form-control">
                                                                {% for type in listeType %}
                                                                    <option value="{{ type.id }}">{{ type.type }}</option>
                                                                {% endfor %}
                                                            </select>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-info" title="Attacher le type" name="creer">
                                    <i class="fa fa-save fa-lg"></i>
                                </button>
                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <strong>Type Actuels</strong>
                                                </div>
                                                <div class="panel-body">
                                                    {% for type in entreprise.bean.lesTypes %}
                                                        <form method="post" action="#">
                                                            <div class="input-group">
                                                                <span class="input-group-addon">Type : </span>

                                                                <input type="text" class="form-control hidden"
                                                                       value="{{ type.id }}" name="idType">
                                                                <input type="text" class="form-control"
                                                                       value="{{ type.type }}" disabled>

                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-info" title="Supprimer le type" name="supp">
                                        <i class="fa fa-times fa-lg"></i>
                                    </button>
                                </span>
                                                            </div>
                                                        </form>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </article>
{% endblock %}
