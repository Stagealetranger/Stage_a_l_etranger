{% extends 'general.html.twig' %}

{% block title %}MMI Stage à l'étranger/{{ entreprise.nom }}{% endblock %}

{% block contenu %}
    <article id="inscription">

        <div>
            <div class="ficheEntreprise communication grandentreprise connu aimer">
                <div class="titreEntreprise ">
                    <h5>{{ papier.bean.nom }}</h5>
                </div>
                <p class="descritpionEntreprise">{{ papier.bean.description }}</p>
                <p class="villeEntreprise">{{ papier.bean.ville }}, {{ papier.bean.pays }}</p>
                <div class="pictoFiltres">
                    <img src="CSS/images/Picto/picto2_communication.png" alt="">
                    <img src="CSS/images/Picto/picto2_grandenteprise.png" alt="">
                    <img src="CSS/images/Picto/picto2_connu.png" alt="">
                    <img src="CSS/images/Picto/picto2_aimer.png" alt="">
                </div>
                <div class="Ensavoirplus">
                    <a class="btnEntreprise bleu" href="index.php?page=Entreprise">En savoir plus</a>
                </div>

            </div>
        </div>

        <form method="post" action="index.php?page=suppPapier" enctype="multipart/form-data">
            <span>Etes vous sur de vouloir supprimer ce papier ?</span>

            <div class="panel panel-footer">
                <button type="submit" class="btn" name="oui">
                    oui
                </button>
            </div>
            <div class="panel panel-footer">
                <button type="submit" class="btn" name="non">
                    non
                </button>
            </div>
        </form>

    </article>
{% endblock %}
